---
import projects from "../../config/projects.json";
---

<section>
  <h2 class="text-5xl font-bold my-5 text-center">Projects</h2>
  {
    projects.map((project) => (
      <div class="flex flex-col md:flex-row mb-2 text-center md:text-left">
        <div class="flex-1 p-4">
          <h2 class="font-bold my-4 text-2xl">{project.title}</h2>
          <p class="my-2">{project.description}</p>
          <button class="bg-indigo-500 px-3 py-2 hover:bg-indigo-400 rounded-sm">
            More info   
        </button>
        </div>
        <div class="flex-1 p-4">
            <img src={project.image} alt="" class="w-72 m-auto"/>
        </div>
      </div>
    ))
  }
</section>
